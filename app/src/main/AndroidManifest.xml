<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.techtown.test_booktree">
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Test_booktree">

        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="http"
                    android:host="google.com" />
            </intent-filter>
        </activity>

        <activity android:name=".SignupActivity">
        </activity>
        <activity android:name=".MainActivity">
        </activity>

        <!--채팅(구현완료)-->
        <activity android:name=".ChatStarterActivity">
        </activity>
        <activity android:name=".ChatChattingActivity">
        </activity>
        <!--커뮤니티(추가예정)-->
        <activity android:name=".CommunityActivity">
        </activity>
        <!--프로필(추가예정)-->
        <activity android:name=".ProfileActivity">
        </activity>
        <!--랭킹(추가예정)-->
        <activity android:name=".RankingActivity">
        </activity>
        <!--검색(추가예정)-->
        <activity android:name=".SearchActivity">
        </activity>

    </application>

</manifest>